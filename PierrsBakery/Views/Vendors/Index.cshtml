@{
  Layout = "_Layout";
}
@using PierrsBakery.Models;
<center>
<h1>List of Vendors</h1>
@if (Model.Count == 0)
{
  <p>There are no Vendors in the list.</p>
}
<ul>
    @foreach (Vendor vendory in Model )
    {
      
        <h3><a href="/vendors/@vendory.Id" >@vendory.getVendorName()</a></h3>
    }
  
</ul>
<br>
<br>
<br>
<hr/>
<a href='/vendors/new'>Add Vendor for my List</a><br>
<a href="/">Return Home Page</a>
<br>
<hr/>
 <form action="/vendors/delete" method="post">
  <button type="submit" class="btn btn-info">Clear All Vendors</button>
</form>
<br>
<hr/>
<form action="/vendors/search" method="get">
  <label for="givenID">Find Vendor by ID</label>
  <input id="givenID" name="givenID" type="number">
  <button type="submit" class="btn btn-info" >Find Vendor</button>
</form>
</center>

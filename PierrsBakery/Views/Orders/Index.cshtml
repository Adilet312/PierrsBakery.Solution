@{
  Layout = "_Layout";
}

@using PierrsBakery.Models;
@model List<PierrsBakery.Models.Order>;
<center>
<h1>List of Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No orders have been added yet!</h3>
} 

@foreach (Order order in Model)
{
  <h3><li>@Html.ActionLink($"{order.OrderTitle}", "Show", new { readID = order.OrderId }) | Vendor's name: @order.Vendor.VendorName  </li></h3>
}
<hr />
<h3>@Html.ActionLink("Add new Vendor", "New")</h3>
<h3>@Html.ActionLink("Back to List of Vendors", "Index","Vendors")</h3>
<h3>@Html.ActionLink("Back to List of Orders", "Index", "Orders")</h3>
<h3>@Html.ActionLink("Back to Home Page", "Index","Home")</h3>
</center>
@using PierrsBakery.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Create a Custom Postcard!</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
<h1>Order!</h1>
@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
    @foreach (Order order in Model )
    {
      
        <li> @order.getDescription()</li>
    }
  
</ul>
<a href="/orders/new">Add a new Order.</a>
<form action="/orders/delete" method="post">
  <button type="submit" class="btn btn-info" name="button">Clear All orders</button>
</form>
<form action="/orders/find" method="get">
  <label for="findId">Find order by ID</label>
  <input id="findId" name="findId" type="number">
  <button type="submit" class="btn btn-info" >Find Order</button>
</form>
@* <a href="/toDoListPath/new">Add a new item.</a> *@
@* <a href="/">Go Home</a> *@
</body>
</html>